<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KinectAsyncWpf2"
		x:Class="KinectAsyncWpf2.MainWindow"
        Title="MainWindow" Height="400" Width="600">
	<Window.DataContext>
		<local:AppModel/>
	</Window.DataContext>
	<Grid>
		<TextBlock Text="{Binding PositionText, Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36"/>
	</Grid>
</Window>
